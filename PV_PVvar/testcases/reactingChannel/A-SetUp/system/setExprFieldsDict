FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
expressions
(
    U
    {
        field       U;
        dimensions  [0 1 -1 0 0 0 0];

//        constants
//        {
//        }

        variables
        (
            "Ubulk = 10"
            "rho1  = 1.05"
            "rho2  = 0.28"
            "delta = 8.75e-3"
            "xmid  = 3*delta"
        );

        fieldMask
        #{
            (pos().x() > xmid)
        #};

        expression
        #{
            vector
            (
                rho1/rho2*Ubulk,
                0.0,
                0.0
            )
        #};
    }
);
